<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#888888"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="ScrollBarThumbPressedBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#0F000000"/>
    <!-- semi-transparent -->

    <Style TargetType="ScrollBar">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Track x:Name="PART_Track" IsDirectionReversed="True">
                            <Track.Thumb>
                                <Thumb>
                                    <Thumb.Style>
                                        <Style TargetType="Thumb">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Opacity" Value="0.3"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Height" Value="60"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="6"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="Opacity" Value="1"/>
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </Thumb.Style>

                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>