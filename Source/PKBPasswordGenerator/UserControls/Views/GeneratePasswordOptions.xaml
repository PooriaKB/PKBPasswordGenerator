<UserControl x:Class="PKBPasswordGenerator.UserControls.Views.GeneratePasswordOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PKBPasswordGenerator.UserControls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600" d:Background="#212F3C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Name="ErrorGrid" Height="0"/>
        </Grid.RowDefinitions>
        <!--Bacward Button-->
        <Button Width="40" Height="40" HorizontalAlignment="Left" Margin="10,0,0,10" FontSize="20" Name="btnBackward" Click="btnBackward_Click">⬅️</Button>
        <!--Password Name Section-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Enter a name for your password :" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBox Grid.Row="1" Width="300" Height="40" Margin="20,10,0,0" Padding="5,0,0,0" FontSize="16" VerticalContentAlignment="Center" Name="tbPassName" BorderBrush="Black" BorderThickness="2"/>
        </Grid>
        <!--Password Options Section-->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Choose used characters type options :" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="100,10,0,0">
                <CheckBox Content="Include Letters (A-Z)" FontSize="14" Margin="0,5,0,0" Foreground="White" BorderBrush="Black" BorderThickness="2" Name="chkAlaphChars"/>
                <CheckBox Content="Include Numbers (0-9)" FontSize="14" Margin="0,5,0,0" Foreground="White" BorderBrush="Black" BorderThickness="2" Name="chkNumbers"/>
                <CheckBox Content="Include Special Char (!@#$)" FontSize="14" Margin="0,5,0,0" Foreground="White" BorderBrush="Black" BorderThickness="2" Name="chkSpecialChars"/>
            </StackPanel>
        </Grid>
        <!--Password Length Section-->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Choose password length :" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBlock Grid.Row="1"
                   Text="{Binding Value,ElementName=PassowrdLengthSlider}"
                   FontSize="18" HorizontalAlignment="Center"
                   VerticalAlignment="Center" Foreground="White"
                   FontWeight="Bold" Name="tbPassLength"/>
            <Slider Name="PassowrdLengthSlider"
            Grid.Row="1" Minimum="6" Maximum="32" Width="300" Margin="0,50,0,0" 
            HorizontalAlignment="Center" VerticalAlignment="Center"
            TickFrequency="1" IsSnapToTickEnabled="True" />
        </Grid>

        <!--Generate Button-->
        <Button Grid.Row="4" Width="125" Height="50" Margin="0,30,0,0" Style="{StaticResource Generate}" Name="btnGeneratePass" Click="btnGeneratePass_Click">
            Generate
        </Button>

        <!--Error Panel Section-->
        <Rectangle Grid.Row="5" Fill="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0"/>

    </Grid>
</UserControl>
