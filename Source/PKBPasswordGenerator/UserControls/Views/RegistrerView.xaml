<UserControl x:Class="PKBPasswordGenerator.UserControls.Views.RegistrerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PKBPasswordGenerator.UserControls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600"
             d:Background="#212F3C">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#A9CCE3"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A9CCE3"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!-- Greatings -->
        <StackPanel>
            <Label FontSize="28">Welcome To</Label>
            <Label FontSize="28">PKB Password Generator</Label>
            <Label FontSize="28">Please register a new user</Label>
        </StackPanel>
        <!--UserName & Password Entries -->
        <Grid Grid.Row="1"
              Height="250"
              Margin="20,0,0,0"
              >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <!-- UserName & Password Labels-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label
                    FontSize="24"
                    VerticalAlignment="Center">
                    UserName:
                </Label>
                <Label
                    FontSize="24"
                    Grid.Row="1"
                    VerticalAlignment="Center">
                    Password:
                </Label>

            </Grid>
            <!-- UserName & Password Input-->
            <Grid
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border
                    Background="White"
                    Width="350"
                    Height="50"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="10"
                    Name="TextBoxBorder">
                    <TextBox
                        Width="350"
                        Height="40"
                        FontSize="24"
                        Name="tbUserName"
                        BorderThickness="0"
                        Background="Transparent"
                        Margin="5,0,0,0"
                        VerticalContentAlignment="Center"
                    />
                </Border>
                <Border
                    Grid.Row="1"
                    Background="White"
                    Width="350"
                    Height="50"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    BorderBrush="Black"
                    BorderThickness="2"
                    CornerRadius="10"
                    Name="PasswordBoxBorder">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox
                            HorizontalAlignment="Left"
                            VerticalContentAlignment="Center"
                            Height="40"
                            Width="350"
                            FontSize="24"
                            BorderThickness="0"
                            Background="Transparent"
                            Margin="5,0,0,0"
                            Name="tbPassword"/>
                        <TextBox
                            HorizontalAlignment="Left"
                            VerticalContentAlignment="Center"
                            Height="40"
                            Width="350"
                            FontSize="24"
                            BorderThickness="0"
                            Background="Transparent"
                            Name="tbPlainPassword"
                            Margin="5,0,0,0"
                            Visibility="Collapsed"/>
                    
                        <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="5">
                        <Button
                            Name="btnTogglePassword"
                            Click="btnEyeToggle_Click"
                            >👁</Button>
                       </StackPanel>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <!-- Register & Login Button -->
        
            <Button 
                Grid.Row="2"
                Height="50"
                Width="150"
                
                Style="{StaticResource Generate}" 
                Name="btnRegister"
                Click="btnRegister_Click"
                >Register
            </Button>
            
        
    </Grid>
</UserControl>
