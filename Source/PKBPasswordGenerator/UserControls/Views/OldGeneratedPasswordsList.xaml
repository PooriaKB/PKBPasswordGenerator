<UserControl x:Class="PKBPasswordGenerator.UserControls.Views.OldGeneratedPasswordsList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PKBPasswordGenerator.UserControls.Views"
             xmlns:UserControls="clr-namespace:PKBPasswordGenerator.UserControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="600" d:Background="#212F3C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Margin="0,20,0,0">Old Generated Passwords :</Label>
            <Border Grid.Row="1" 
                    Background="Transparent" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch" 
                    Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Center" >
                    <Label 
                        Height="30" 
                        FontSize="14">Order By:</Label>
                    <RadioButton Margin="10,0,0,0"
                                 Content="Last -> First"
                                 VerticalContentAlignment="Center"
                                 Foreground="White"
                                 FontWeight="Bold"
                                 FontSize="14"
                                 Name="rbtn_LastToFirst"
                                 Click="rbtn_LastToFirst_Click"
                        />
                    <RadioButton Margin="10,0,0,0"
                                 Content="First -> Last"
                                 VerticalContentAlignment="Center"
                                 Foreground="White"
                                 FontWeight="Bold"
                                 FontSize="14"
                                 Name="rbtn_FirstToLast"
                                 Click="rbtn_FirstToLast_Click"
                        />
                    <RadioButton Margin="10,0,0,0"
                                 Content="Name"
                                 VerticalContentAlignment="Center"
                                 Foreground="White"
                                 FontWeight="Bold"
                                 FontSize="14"
                                 Name="rbtn_NameOrder"
                                 Click="rbtn_NameOrder_Click"/>
                    
                </StackPanel>
            </Border>
        </Grid>
        <Border VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" BorderThickness="0" Background="#212F3C" Height="300">
            <ScrollViewer VerticalScrollBarVisibility="Auto"  Width="auto" Padding="0,0,5,0">
                <StackPanel HorizontalAlignment="Left" Name="PasswordStackPanel" Width="500">
                    
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Border Margin="0,20,0,0" Grid.Row="2"  >
            <Button Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Name="btnBackToMainMenu" Click="btnBackToMainMenu_Click">Back to Main Menu</Button>
        </Border>
    </Grid>
</UserControl>
