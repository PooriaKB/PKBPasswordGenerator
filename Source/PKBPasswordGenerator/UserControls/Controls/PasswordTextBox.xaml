<UserControl x:Class="PKBPasswordGenerator.UserControls.Controls.PasswordTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PKBPasswordGenerator.UserControls.Controls"
             mc:Ignorable="d" 
             Height="50" Width="500">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#A9CCE3"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="Black" 
                            BorderThickness="2" 
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A9CCE3"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Background="White" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock 
                Grid.Column="0"
                x:Name="PasswordTextBlockName" 
                Padding="5"
                Margin="5"
                FontSize="15" 
                FontWeight="Bold"
                VerticalAlignment="Center" 
                TextWrapping="Wrap" 
                Width="auto" 
                Text="{Binding DisplayText, RelativeSource={    RelativeSource AncestorType=UserControl}}" 
                Foreground="Black" 
                HorizontalAlignment="Center" 
                IsHitTestVisible="False"
                />
            
            <TextBlock 
                Grid.Column="1"
                x:Name="PasswordTextBlock" 
                Padding="5,0,0,0"
                FontSize="14" 
                VerticalAlignment="Center" 
                TextWrapping="Wrap" 
                Width="auto" 
                Text="{Binding DisplayText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                Foreground="Black" 
                HorizontalAlignment="Left" 
                IsHitTestVisible="False"
                />
            
            <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Right"  
                Margin="0,0,5,0" 
                VerticalAlignment="Center"
                Grid.Column="2">
                <Button x:Name="btnShow"  
                        Margin="3,0,0,0"
                        Click="BtnEye_Click">👁️</Button>
                <Button x:Name="btnDelete"  
                        Margin="3,0,0,0"
                        Click="BtnDelete_Click">❌</Button>
                <Button x:Name="btnCopy"  
                        Margin="3,0,0,0"
                        Click="BtnCopy_Click">📝</Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
